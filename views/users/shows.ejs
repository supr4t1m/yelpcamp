<%- include("../partials/header") %>

<div class="container">
	
	<div class="row">
		
		<div class="col-md-9 col-xs-6">
			
			<div class="row">
				
				<div class="col-xs-6">
					<div class="panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title">Username</h3>
						</div>
						<div class="panel-body">
							<%= user.username %>
						</div>
					</div>
				</div>
				
			</div>
			
			<div class="row">
				
				<div class="col-xs-6">
					<div class="panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title">First Name</h3>
						</div>
						<div class="panel-body">
							<%= user.firstName %>
						</div>
					</div>
				</div>
				
				<div class="col-xs-6">
					<div class="panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title">Last Name</h3>
						</div>
						<div class="panel-body">
							<%= user.lastName %>
						</div>
					</div>
				</div>
				
			</div>
			
			<div class="row">
				
				<div class="col-xs-12">
					<div class="panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title">Email</h3>
						</div>
						<div class="panel-body">
							<a href="mailto:<%=user.email%>"><%= user.email %></a>
						</div>
					</div>
				</div>
				
			</div>
			
			<div class="row">
				
				<div class="col-xs-12">
					<div class="panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title">Bio</h3>
						</div>
						<div class="panel-body">
							<%= user.bio %>
						</div>
					</div>
				</div>
				
			</div>
			
		</div>
		
		<div class="col-md-3 col-xs-6">
			<img src="https://avatars.dicebear.com/api/bottts/the_nerd.svg" alt="avatar profile image" class="img-thumbnail">
		</div>
		
	</div>
	
	<div class="row">
		
		<div class="col-xs-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Posted Campgrounds</h3>
				</div>
				<ul class="list-group">
				<% campgrounds.forEach(function(campground) { %>
					<li class="list-group-item"><a href="/campgrounds/<%=campground.id%>"><%=campground.name%></a><span class="pull-right"><%=moment(campground.createdAt).fromNow()%></span></li>
				<% }) %>
				</ul>
			</div>
		</div>
		
	</div>
</div>
<%- include("../partials/footer") %>